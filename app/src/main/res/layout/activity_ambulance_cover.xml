<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AmbulanceCover">

    <include
        android:id="@+id/single_post_toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_post_toolbar"
        app:srcCompat="@drawable/ambulance" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="613dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="178dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="437dp"
            app:srcCompat="@drawable/banner_bg2" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="261dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="14dp"
            android:text="Uzima Ambulance Cover"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="356dp"
            android:layout_height="81dp"
            android:layout_below="@+id/textView40"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:text="This ambulance cover will cover expenses incurred when being treated by paramedics and transported in ambulances. This cover will be renewed anually. It includes:" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:layout_below="@+id/textView41"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:text="1. Unlimited ambulance evacuation and ground transfers within Kenya." />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="351dp"
            android:layout_height="47dp"
            android:layout_below="@+id/textView42"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="23dp"
            android:text="2. 24hrs medical helpline anytime from anywhere for medical advice." />

        <Button
            android:id="@+id/button_proceed_pay"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView43"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="90dp"
            android:background="#43A047"
            android:text="Proceed to pay" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>